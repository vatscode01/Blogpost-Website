<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= startingContent %></p>

 <% postContent.forEach(function(element){ %>
    <h1><%= element.title %></h1>
    
    <% if(element.body.length<=100){ %>
        <p> <%= element.body %> </p>
    <% }else{ %>
     <p><%= element.body.substring(0,100) + " ... " %> <a href="/compose/<%=element.title%>">Read More</a> </p>
    <% } %>
    
    <% }); %>  
    


<%- include("partials/footer") -%>